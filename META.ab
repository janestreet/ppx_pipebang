version = "$(pkg_version)"
description = "A ppx rewriter that inlines reverse application operators `|>` and `|!`"
requires = "ppx_core ppx_driver"
archive(ppx_driver, byte  ) = "ppx_pipebang.cma"
archive(ppx_driver, native) = "ppx_pipebang.cmxa"
plugin(ppx_driver, byte  ) = "ppx_pipebang.cma"
plugin(ppx_driver, native) = "ppx_pipebang.cmxs"
exists_if = "ppx_pipebang.cma"
ppx(-ppx_driver,-custom_ppx) = "./ppx"
